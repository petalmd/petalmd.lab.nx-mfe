{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@petal/features/angular/workflow": [
        "libs/features/angular/workflow/src/index.ts"
      ],
      "@petal/features/nest/change-request": [
        "libs/features/nest/change-request/src/index.ts"
      ],
      "@petal/features/nest/schedule": [
        "libs/features/nest/schedule/src/index.ts"
      ],
      "@petal/features/nest/socket": ["libs/features/nest/socket/src/index.ts"],
      "@petal/features/nest/user": ["libs/features/nest/user/src/index.ts"],
      "@petal/features/nest/workflow": [
        "libs/features/nest/workflow/src/index.ts"
      ],
      "@petal/store/workflow": ["libs/store/workflow/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
